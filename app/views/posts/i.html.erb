<%= link_to "Show this post", @post, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
<%= link_to "Back to posts", posts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
<div class="col-4 col-sm-4 col-md-3 col-lg-3 clearfix">
  <% if list.image.attached? %>
    <%= link_to image_tag(list.image,
    style:"width:270px; heigh:auto"), list.image %>
  <% end %>
</div>
<% if @pagy.count > @pagy.items %>
<div class="mt-10">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
<hr />
<% end %>
<%= render @posts %>
